<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mager.story">

    <application
        android:name=".StoryApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".home.HomeActivity"
            android:excludeFromRecents="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".menu.MenuActivity"
            android:excludeFromRecents="true"
            android:label="@string/menu_title"
            android:parentActivityName=".home.HomeActivity" />

        <activity
            android:name=".content.photo.PhotoActivity"
            android:excludeFromRecents="true"
            android:label="@string/photo_title"
            android:parentActivityName=".menu.MenuActivity" />

        <activity
            android:name=".content.story.StoryActivity"
            android:excludeFromRecents="true"
            android:label="@string/story_title"
            android:parentActivityName=".menu.MenuActivity">
        </activity>
    </application>

</manifest>